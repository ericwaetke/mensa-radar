{
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.ns",
      "dom"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/solid-js"
  },
  "lint": {
    "exclude": [
      ".astro/",
      ".vscode/",
      "public/"
    ]
  },
  "imports": {
    "@/": "./src/"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
